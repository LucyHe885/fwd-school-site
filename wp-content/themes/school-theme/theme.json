{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "620px",
			"wideSize": "1000px"
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "My Custom Font, sans-serif",
					"slug": "my-custom-font"
				}
			],
			"fontSizes": [
				{
					"name": "small",
					"slug": "small",
					"size": "clamp(1rem, 2vw, 1.2rem)"
				},
				{
					"name": "medium",
					"slug": "medium",
					"size": "clamp(1.2rem, 3vw, 1.5rem)"
				},
				{
					"name": "large",
					"slug": "large",
					"size": "clamp(1.5rem, 4vw, 2rem)"
				}
			]
		},
		"color": {
			"custom": {
				"palette": [
					{
						"slug": "primary",
						"color": "#3498db"
					},
					{
						"slug": "secondary",
						"color": "#2ecc71"
					},
					{
						"slug": "accent",
						"color": "#e74c3c"
					},
					{
						"slug": "background",
						"color": "#f0f0f0"
					}
				]
			}
		},
		"useRootPaddingAwareAlignments": true
	},
	"blocks": {
		"core/paragraph": {
			"styles": {
				"color": {
					"text": "#333"
				},
				"typography": {
					"fontSize": "clamp(1rem, 2vw, 1.2rem)"
				}
			}
		},
		"core/heading": {
			"styles": {
				"typography": {
					"fontSize": "clamp(1.5rem, 3vw, 2rem)"
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 3
}
